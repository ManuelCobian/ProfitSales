<resources>

    <!-- Text Normal-->
    <style name="TextNormal">
        <item name="android:textSize">@dimen/font_body</item>
    </style>

    <style name="TextNormal.Black" parent="TextNormal">
        <item name="android:textColor">@color/semi_black</item>
    </style>

    <style name="TextNormal.Purple" parent="TextNormal">
        <item name="android:textColor">@color/purple_200</item>
    </style>

    <style name="TextNormal.White" parent="TextNormal">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextNormal.White.bold" parent="TextNormal.White">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextNormal.Red" parent="TextNormal">
