<resources>

    <!-- Button-->
    <style name="Button">
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">@dimen/spacing_empty</item>
        <item name="android:minWidth">@dimen/spacing_empty</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Normal" parent="Button">
        <item name="android:paddingTop">@dimen/spacing_xstandard</item>
        <item name="android:paddingBottom">@dimen/spacing_xstandard</item>
        <item name="minHeight">@dimen/spacing_empty</item>
        <item name="android:paddingLeft">@dimen/spacing_standard</item>
        <item name="android:paddingRight">@dimen/spacing_standard</item>
        <item name="android:textSize">@dimen/font_subtitle</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button.Small" parent="Button">
        <item name="android:minWidth">@dimen/min_button_width</item>
        <item name="android:paddingTop">@dimen/spacing_empty</item>
        <item name="android:paddingBottom">@dimen/spacing_empty</item>
        <item name="android:paddingLeft">@dimen/spacing_medium</item>
        <item name="android:paddingRight">@dimen/spacing_medium</item>
        <item name="android:textSize">@dimen/font_caption1</item>
    </style>


    <style name="Button.Middle" parent="Button">
        <item name="android:minWidth">@dimen/min_button_middle_width</item>
        <item name="android:paddingTop">@dimen/spacing_standard</item>
        <item name="android:paddingBottom">@dimen/spacing_standard</item>
        <item name="android:paddingLeft">@dimen/spacing_medium</item>
        <item name="android:paddingRight">@dimen/spacing_medium</item>
        <item name="android:textSize">@dimen/font_caption1</item>
    </style>

    <style name="Button.Purple.Normal" parent="Button.Normal">
        <item name="android:background">@drawable/selector_button_purple</item>
    </style>

    <style name="Button.Purple.Small" parent="Button.Small">
        <item name="android:background">@drawable/selector_button_purple</item>
    </style>


    <style name="Button.Purple.Middle" parent="Button.Middle">
        <item name="android:background">@drawable/selector_button_purple</item>
    </style>

    <style name="Button.Purple.Middle.White" parent="Button.Middle">
        <item name="android:background">@drawable/selector_button_white</item>
    </style>

    <style name="Button.White.Normal" parent="Button.Normal">
        <item name="android:background">@drawable/selector_button_white</item>
        <item name="android:textColor">@color/semi_black</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button.White.Purple.Border.Normal" parent="Button.Normal">
        <item name="android:background">@drawable/selector_button_white_purple_borders</item>
        <item name="android:textColor">@color/purple_200</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button.White.Purple.Border.Small" parent="Button.Small">
        <item name="android:background">@drawable/selector_button_white_purple_borders</item>
        <item name="android:textColor">@color/purple_200</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="Button.White.Green.Border.Normal" parent="Button.Normal">
        <item name="android:backgroundTint">@color/primary_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="Button.White.Green.Border.Normal.Enabled" parent="Button.Normal">
        <item name="android:background">@drawable/selector_button_white_purple_borders</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="Button.White.Green.Border.Middle" parent="Button.Middle">
        <item name="android:background">@drawable/selector_main</item>
        <item name="android:textColor">@drawable/selector_text_color_button_white</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button.White.Gray.Border.Middle" parent="Button.Middle">
        <item name="android:background">@drawable/box_white_whit_gray_border</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView">
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">@dimen/spacing_empty</item>
        <item name="android:minWidth">@dimen/spacing_empty</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.Purple" parent="TextView">
        <item name="android:background">@drawable/bg_purple_light_rounded</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView.Purple.FontBody" parent="TextView.Purple">
        <item name="android:textSize">@dimen/font_body</item>
    </style>
</resources>